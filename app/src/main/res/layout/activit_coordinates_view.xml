<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/coordinates_instructions"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Enter GPS coordinates of the tree. In order to recieve the best results, its is important to enter 11 significant digits."
                android:textAlignment="center"
                android:textColor="@color/accent_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/latitude_coord"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Latitude: "
                    android:textColor="@color/accent_gray"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/lat_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:textColor="@color/accent_gray"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/longitude_coord"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Longitude: "
                    android:textColor="@color/accent_gray"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/long_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_border"
                    android:textColor="@color/accent_gray"
                    android:textSize="20sp" />
            </LinearLayout>
            <Button
                android:id="@+id/sub_coord_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/accent_gray"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />/>



</android.support.constraint.ConstraintLayout>