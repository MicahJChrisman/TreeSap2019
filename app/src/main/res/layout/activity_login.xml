<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/other_info_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Login"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/accent_gray"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/login_first_menu">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="You need to login in order to add your own trees."
            android:textSize="24dp"
            android:textAlignment="center"
            android:textColor="@color/accent_gray"/>

        <Button
            android:id="@+id/button_login_first"
            android:layout_width="190dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/new_invented_color"
            android:text="Login"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/button_register_first"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:text="Register"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/change_displayname"
        android:background="@color/appBackground"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Select a new username"
            android:textColor="@color/accent_gray"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="Old Username"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:id="@+id/old_username" />
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="New Username"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:id="@+id/new_username" />
        <Button
            android:id="@+id/button_change_username"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="Reset"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/forgot_password_container"
        android:background="@color/appBackground"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="We will email a link to reset your password."
            android:textColor="@color/accent_gray"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:id="@+id/forgot_password_email"
            android:inputType="textWebEmailAddress"/>
        <Button
            android:id="@+id/button_forgot_password"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="Reset"/>

        <TextView
            android:id="@+id/back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#00278F"
            android:layout_marginTop="5dp"
            android:text="Back to login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/login_container"
        android:background="@color/appBackground"
        android:gravity="center"
        android:visibility="gone">

        <EditText
            android:id="@+id/edittext_username"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:hint="Email"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_border"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="Login"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent_gray"
                android:text="Not Registered?"/>

            <TextView
                android:id="@+id/textview_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Register"/>

        </LinearLayout>

        <TextView
            android:id="@+id/forgot_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#00278F"
            android:text="Forgot Password?" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/register_container"
        android:visibility="gone">

        <EditText
            android:id="@+id/edittext_username_reg"
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:hint="Email"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border"
            android:hint="Display Name"
            android:id="@+id/edittext_displayname_reg"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:inputType="textFilter"/>

        <EditText
            android:id="@+id/edittext_password_reg"
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_border"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edittext_cnf_password"
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_border"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/button_register"
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="Register"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/accent_gray"
                android:text="Already Registered?"/>

            <TextView
                android:id="@+id/textview_login"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:text="Login"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:textColor="@color/accent_gray"
        android:textSize="16dp"
        android:id="@+id/cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>