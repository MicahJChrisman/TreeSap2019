<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">






    <TextView
        android:id="@+id/home_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Home"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/accent_gray"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/treesap_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dark_logo"
            android:scaleType="centerCrop"
            android:layout_above="@id/message"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/curator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Curator Options"
            android:layout_below="@id/message3"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>


        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/colorBackground"
            android:src="@drawable/sett_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/add_tree_button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/colorBackground"
            android:src="@drawable/icons8_plus_math_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To TreeSap!"
            android:layout_above="@+id/message1"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message1"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Identify trees using the tools on the tab bar below."
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message2"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Add your own trees by tapping the + icon on the upper-left."
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:id="@+id/message3"
            android:layout_below="@+id/message2"
            android:layout_centerHorizontal="true"
            android:text="Use the settings button to adjust data sources and other settings"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/notifications_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_tree_button_0"
            android:text="Notifications" />


    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/new_invented_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"/>

</android.support.constraint.ConstraintLayout>