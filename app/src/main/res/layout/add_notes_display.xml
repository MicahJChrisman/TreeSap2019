<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@drawable/add_notes_background"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/addTreeNotesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Add Notes About This Tree"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/add_notes_box_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:drawableBottom="@color/black"
            android:hint="Add Note(s) here"
            android:inputType="text"
            android:lines="3"
            android:shadowColor="#00000000"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="#FFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/add_notes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_style"
            android:backgroundTint="@color/appBackground"
            android:text="Submit"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/previousNotesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingTop="50dp"
        android:text="Previous Notes About This Tree:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="Take a picture of this tree: "
            android:textColor="#FFF"
            android:textSize="24dp" />

        <ImageButton
            android:id="@+id/user_add_tree_pic"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_style"
            android:backgroundTint="@color/appBackground"
            android:backgroundTintMode="src_in"
            android:maxWidth="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_logo" />


    </LinearLayout>

    <TextView
        android:id="@+id/noPreviousNotesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingTop="50dp"
        android:text="There are no previous notes about this tree."
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/user_add_tree_pic_appear"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />


</LinearLayout>


