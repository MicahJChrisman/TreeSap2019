<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/add_notes_background"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/add_notes_box_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:drawableBottom="@color/black"
            android:hint="Add Note(s) here"
            android:inputType="text"
            android:lines="3"
            android:shadowColor="#00000000"
            android:textColor="#FFFFFF"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="#FFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/add_notes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_style"
            android:backgroundTint="@color/appBackground"
            android:text="Submit"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="Take a picture of this tree: "
            android:textColor="#FFF"
            android:textSize="24dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_add_tree_pic_appear"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:gravity="center" />


</LinearLayout>


